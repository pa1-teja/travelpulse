<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/blue_100"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <RelativeLayout
        android:id="@+id/rl_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:padding="5dp"
            android:text="Name"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/tv_vehicle_label"
            android:padding="5dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_mobile_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name_label"
            android:layout_alignParentStart="true"
            android:padding="5dp"
            android:text="Mobile"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name_label"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@id/tv_vehicle_label"
            android:padding="5dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_vehicle_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_mobile_label"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="20dp"
            android:padding="5dp"
            android:text="Vehicle"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_vehicle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_mobile_label"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@id/tv_vehicle_label"
            android:padding="5dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_status_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_vehicle_label"
            android:layout_alignParentStart="true"
            android:padding="5dp"
            android:text="Status"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_vehicle_label"
            android:layout_toEndOf="@id/tv_vehicle_label"
            android:layout_toStartOf="@+id/cp_active"
            android:padding="5dp"
            android:textColor="@color/black" />
        <com.google.android.material.chip.Chip
            android:id="@+id/cp_active"
            android:layout_below="@+id/tv_vehicle_label"
            android:text="Set Deactive"
            android:padding="10dp"
            app:rippleColor="@color/blue_color"
            app:chipBackgroundColor="@color/blue_300"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>

