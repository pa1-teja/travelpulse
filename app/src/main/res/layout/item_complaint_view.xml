<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_ticket"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:padding="5dp"
            android:text="Ticket No    :"
            android:textColor="@color/black"
            android:layout_marginEnd="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_ticket_no"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/tv_ticket"
            android:textColor="@color/black"
            android:padding="5dp"
            android:text="201105"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_issue_at"
            android:layout_below="@+id/tv_ticket_no"
            android:textColor="@color/black"
            android:padding="5dp"
            android:text="Issued On   :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_issue_date"
            android:layout_toEndOf="@+id/tv_ticket"
            android:layout_below="@+id/tv_ticket"
            android:textColor="@color/black"
            android:padding="5dp"
            android:text="26/12/2019"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_issue"
            android:padding="5dp"
            android:layout_below="@+id/tv_issue_date"
            android:textColor="@color/black"
            android:text="Issue           :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_issue_description"
            android:padding="5dp"
            android:layout_toEndOf="@+id/tv_ticket"
            android:layout_below="@+id/tv_issue_date"
            android:text="Facing late notification problem from last 2 days. I called respective RM yesterday, but problem not solved yet."
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_solution"
            android:padding="5dp"
            android:layout_below="@+id/tv_issue_description"
            android:textColor="@color/black"
            android:text="Solution      :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_issue_solution"
            android:padding="5dp"
            android:layout_toEndOf="@+id/tv_ticket"
            android:layout_below="@+id/tv_issue_description"
            android:text="Facing late notification problem from last 2 days. I called respective RM yesterday, but problem not solved yet."
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:id="@+id/divider"
            android:background="@color/gray"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/tv_issue_solution"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/tv_status"
            android:padding="5dp"
            android:text="Status"
            android:layout_marginTop="4dp"
            android:textColor="@color/black"
            android:layout_below="@+id/divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/tv_status_at"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_below="@+id/divider"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/green_300"
            android:layout_toEndOf="@+id/tv_ticket"
            android:text="Resolved on 26/12/2019"
            android:layout_width="wrap_content"
            android:layout_height="40dp"/>
        <ImageView
            android:id="@+id/iv_reply"
            android:padding="5dp"
            android:src="@drawable/ic_reply_black_24dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/divider"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/iv_details"
            android:padding="5dp"
            android:src="@drawable/ic_chats"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/divider"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:visibility="gone"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
