<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/action_bar_fleet">

    <fragment
        android:id="@+id/googleMap"
        android:name="com.trimax.vts.view.maps.CustomMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/maxminMapIcontwo"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="10dp"
        android:clickable="true"
        android:gravity="right"
        android:onClick="maxminMapClicked"
        android:src="@drawable/amin"
        android:tag="min"
        android:visibility="invisible"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/zoomInOut"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/layout_fourbox"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/maximize_black"
        android:padding="5dp"
        android:tag="min" />

    <RelativeLayout
        android:id="@+id/layout_fourbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@android:color/transparent">

        <RelativeLayout
            android:id="@+id/first_box"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/first_box">

            <ImageView
                android:id="@+id/iv_stopped"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/stopped_vehicle" />

            <TextView
                android:id="@+id/stopped_vehicle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/iv_stopped"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:gravity="right"
                android:text=""
                android:textColor="#ffff"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_stopped"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/stopped_vehicle"
                android:layout_marginRight="5dp"
                android:gravity="right"
                android:text="Stopped Vehicles"
                android:textColor="#ffff"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_below="@+id/tv_stopped"
                android:gravity="right"
                android:text="Details Info"
                android:textColor="#000"
                android:textSize="12dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/second_box"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/first_box"
            android:background="@drawable/second_box">

            <ImageView
                android:id="@+id/iv_moving"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/moving_vehicle" />

            <TextView
                android:id="@+id/moving_vehicle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/iv_moving"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:gravity="right"
                android:textColor="#ffff"
                android:textSize="25dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_moving_vehicle"
                android:layout_below="@+id/moving_vehicle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:gravity="right"
                android:text="Moving Vehicles"
                android:textColor="#ffff"
                android:textSize="14dp"
                android:textStyle="bold" />
            <TextView
                android:layout_below="@+id/tv_moving_vehicle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:gravity="right"
                android:text="Details Info"
                android:textColor="#000"
                android:textSize="12dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/third_box"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_below="@+id/first_box"
            android:layout_marginTop="10dp"
            android:background="@drawable/third_box">
            <ImageView
                android:id="@+id/iv_idle"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/idle_vehicle" />

            <TextView
                android:id="@+id/idle_vehicle"
                android:layout_toEndOf="@+id/iv_idle"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:text=""
                android:textColor="#ffff"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_idle"
                android:layout_below="@+id/idle_vehicle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:gravity="right"
                android:text="Idle Vehicles"
                android:textColor="#ffff"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_idle"
                android:layout_marginRight="5dp"
                android:gravity="right"
                android:text="Details Info"
                android:textColor="#000"
                android:textSize="12dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/four_box"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_below="@+id/second_box"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/third_box"
            android:background="@drawable/four_box">

            <ImageView
                android:id="@+id/iv_no_network"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/no_network" />

            <TextView
                android:id="@+id/nonetwork_vehicle"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/iv_no_network"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:gravity="right"
                android:text=""
                android:textColor="#ffff"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_no_network"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_below="@+id/nonetwork_vehicle"
                android:gravity="right"
                android:text="No Network"
                android:textColor="#ffff"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_no_network"
                android:layout_marginRight="5dp"
                android:gravity="right"
                android:text="Details Info"
                android:textColor="#000"
                android:textSize="12dp"
                android:textStyle="bold" />

        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/mapchangeID"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/circular_shape_background"
        android:clickable="true"
        android:gravity="center"
        android:tag="OFF"
        android:text="@string/fa_map"
        android:textColor="@color/ic_color"
        android:textSize="@dimen/map_text_size" />

</RelativeLayout>