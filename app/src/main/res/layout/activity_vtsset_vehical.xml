<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.trimax.vts.view.vehicle.VTSSetVehicalActivity"
    android:orientation="vertical" >

	<EditText
		android:id="@+id/et_search"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:hint="search...."
		android:paddingLeft="5dp"
		android:focusable="true"
		android:singleLine="true"
		android:maxLines="1"
		android:maxLength="15"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_alignParentTop="true"/>
        <ProgressBar
            android:id="@+id/progressbar_login"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:theme="@style/CircularProgress"
            android:visibility="visible" />


   <ListView
	   android:layout_below="@+id/et_search"
		android:id="@+id/vtssetvehicallistview"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
	   android:layout_above="@+id/vtssetvehicalbtn"
		android:divider="@drawable/home_list_gradient"
		android:dividerHeight="5dp">
    </ListView>
    <Button 
        android:id="@+id/vtssetvehicalbtn"
		style="@style/button_comman"
		android:layout_alignParentBottom="true"
		android:text="Save" />

</RelativeLayout>
