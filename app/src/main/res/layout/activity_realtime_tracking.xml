<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/vtsmapll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D5D5D5"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:id="@+id/relvtsgoogleMap"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9" >
            <fragment
                android:id="@+id/vtsgoogleMap"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:name="com.trimax.vts.view.maps.CustomMapFragment"/>

            <TextView
                android:id="@+id/mapreloadID"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reload Map"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:clickable="true"
                android:background="@color/map_button_color"/>

            <LinearLayout
                android:id="@+id/lineMapMsgID"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:background="#80000000"
                android:visibility="gone">
                <TextView
                    android:id="@+id/mapIdSymbol"
                    android:layout_width="55dp"
                    android:layout_height="60dp"
                    android:text="@string/wifi_symbol"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/mapMessage"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:textColor="#fff"
                    android:visibility="gone"
                    />
            </LinearLayout>
            <RelativeLayout
                android:layout_below="@+id/lineMapMsgID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/setPanId"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="15dp"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/car_background_drawable"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="@string/fa_car"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/map_text_size" />

                <ImageView
                    android:id="@+id/toolId"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:padding="5dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="15dp"
                    android:src="@drawable/ic_car_location"
                    android:background="@drawable/circular_shape_background"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="@string/fa_map_marker"
                    android:textColor="@color/ic_color"
                    android:textSize="@dimen/map_text_size" />


                <ImageView
                    android:id="@+id/mapchangeID"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:padding="5dp"
                    android:layout_marginEnd="15dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/toolId"
                    android:background="@drawable/circular_shape_background"
                    android:clickable="true"
                    android:gravity="center"
                    android:src="@drawable/ic_map"
                    android:tag="OFF"
                    android:text="@string/fa_map"
                    android:textColor="@color/ic_color"
                    android:textSize="@dimen/map_text_size" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_alignParentBottom="true"
                android:background="#80000000">


                <TextView
                    android:id="@+id/getLocaID"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:textSize="15sp"
                    android:textColor="#fff"/>

                <LinearLayout
                    android:id="@+id/linearTxtId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/txtVehRegNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:textColor="#fff"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/txtVehName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:textAllCaps="true"
                            android:textStyle="bold"
                            android:maxLines="1"
                            android:textColor="#ffffff"
                            android:textSize="15sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:id="@+id/txtVehSpeed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:textColor="#fff"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/txtVehIgnition"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:textSize="14sp"
                            android:textAllCaps="true" />

                        <TextView
                            android:id="@+id/txtVehAc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:textColor="#fff"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtVehDateTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:textColor="#fff"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/vtsShareIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="5dp"
                        android:clickable="true"
                        android:onClick="vtsShareClicked"
                        android:text="@string/fa_share"
                        android:textColor="#fff"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/vtsCarIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:gravity="center"
                        android:onClick="vtsCarMapClicked"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:paddingTop="0dp"
                        android:text="@string/fa_car"
                        android:textColor="#fff"
                        android:textSize="20sp" />
                    <!--android:layout_toLeftOf="@+id/maxminMapIcon"-->
                    <ImageView
                        android:id="@+id/maxminMapIcon"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="5dp"
                        android:clickable="true"
                        android:gravity="center"
                        android:onClick="maxminMapClicked"
                        android:src="@drawable/maximize"
                        android:tag="min" />
                </LinearLayout>
            </RelativeLayout>


        </RelativeLayout>

        <ListView
            android:id="@+id/vtslistview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:divider="@drawable/home_list_gradient"
            android:dividerHeight="4dp" >
        </ListView>
    </LinearLayout>

</RelativeLayout>