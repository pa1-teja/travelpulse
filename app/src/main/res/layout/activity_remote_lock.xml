<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".lock.RemoteLockActivity"
    >
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lock.RemoteLockActivity">

    <TextView
        android:id="@+id/tv_vehicle_no"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="MH-12 0A1234"
        style="@style/RemoteTextview" />

    <TextView
        android:id="@+id/tv_make_model"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_vehicle_no"
        android:text="Honda City"
        style="@style/RemoteTextview"/>
    <TextView
        android:id="@+id/tv_current_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_make_model"
        android:text="Current Status : Unlocked"
        style="@style/RemoteTextview"/>
    <TextView
        android:id="@+id/tv_vehicle_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_current_status"
        android:text="Vehicle : "
        style="@style/RemoteTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <com.google.android.material.chip.Chip
        android:id="@+id/cp_status"
        android:layout_marginStart="35dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_current_status"
        app:layout_constraintStart_toEndOf="@+id/tv_vehicle_status"
        android:padding="8dp"
        android:text="Moving"
        app:chipBackgroundColor="@color/red_100"
        app:rippleColor="@color/red_300"
        android:textColor="@color/colorPrimary"
        app:closeIcon="@drawable/ic_arrow_right"
        app:closeIconTint="@color/colorPrimary"
        app:closeIconStartPadding="10dp"
        app:closeIconEndPadding="10dp"
        app:closeIconEnabled="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_vehicle_status"
        app:layout_constraintTop_toBottomOf="@+id/cp_status"
        android:layout_marginStart="40dp"
        android:padding="5dp"
        android:lineSpacingExtra="8dp"
        android:text="Ignation : ON\nSpeed : 50KM\nLocation : 404, Trimax IT Solutions, Nilkant Corporate, Kirol Road, Vidyavihar - 400089"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_lock_vehicle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:textColor="@color/white"
        android:text="Lock"
        app:iconGravity="textStart"
        app:icon="@drawable/ic_lock"
        app:layout_constraintTop_toBottomOf="@+id/tv_location"
        android:layout_width="180dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_request"
        app:layout_constraintBottom_toTopOf="@+id/rv_requests"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/gray"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textAllCaps="true"
        android:text="Last request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_requests"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_see_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_see_more"
        android:textAllCaps="true"
        android:text="@string/see_all"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@drawable/top_border"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>