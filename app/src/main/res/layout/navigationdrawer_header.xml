<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerPane"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start" >

    <!-- Profile Box -->

    <RelativeLayout
        android:id="@+id/profileBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/road_pulse_red_color"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp" >

       <!-- <TextView
            android:id="@+id/userIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fa_user_icon"
            android:textColor="#fff"
            android:textSize="40sp" />-->
        <RelativeLayout
            android:id="@+id/userIcon"
            android:layout_width="50dp"
            android:layout_height="50dp">

            <com.trimax.vts.drawer.CustomViewCircularShape
                android:id="@+id/profileImage_iv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/circuler_shape_for_profile_pic"
                android:scaleType="fitCenter"
                />

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="UK"
                android:textSize="20dp"
                android:gravity="center"
                android:id="@+id/profile_text_tv"
                android:background="@drawable/circuler_shape_for_profile_pic"
                android:textColor="@color/text_color"
                android:textAlignment="center"
                android:visibility="gone"
                />

           <!-- <ImageView
                android:visibility="visible"
                android:id="@+id/profile_img_view"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="@drawable/circuler_shape_for_profile_pic"
                android:clickable="true"
                />-->
            <com.trimax.vts.utils.RoundedImageView
                android:id="@+id/profile_img_view"
                android:clickable="true"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:foregroundGravity="center"
                />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/ll_userdetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userIcon"
            android:clickable="true"
            android:orientation="horizontal"
            android:weightSum="1" >

            <TextView
                android:id="@+id/uName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Demo"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:layout_weight="0.95" />

            <TextView
                android:id="@+id/OpenProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:text="@string/fa_arrow_down"
                android:textColor="#fff"
                android:layout_weight="0.05"
                android:visibility="gone"/>
        </LinearLayout>

        

      <!--   android:layout_alignTop="@+id/userIcon" -->

        <TextView
            android:id="@+id/BellIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:paddingTop="8dp"
            android:text="@string/fa_bell"
            android:textSize="22dp"
            android:textColor="#fff"
       />
      <!--    android:layout_alignTop="@+id/userIcon" -->
    </RelativeLayout>

</RelativeLayout>