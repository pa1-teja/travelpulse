<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vehicle.ActivityTravelPerformance">
<RelativeLayout
    android:id="@+id/rl_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone">

        <TextView
            android:id="@+id/vehicle_no_performace"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AP0000078999"
            android:gravity="center_vertical"
            android:layout_margin="20dp"
            android:drawablePadding="20dp"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/travel_perfomance"
            android:textSize="18sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/c_rv_performance"
            android:layout_below="@id/vehicle_no_performace"
            android:layout_margin="10dp"
            app:cardElevation="5dp">

        <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_performance"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>

        </androidx.cardview.widget.CardView>
  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:drawableTop="@drawable/ic_dot_black_24dp"
      android:layout_alignParentStart="true"
      android:layout_below="@id/c_rv_performance"
      android:layout_marginLeft="10dp"
      android:layout_marginTop="35dp"/>

        <TextView
            android:id="@+id/no_of_instance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_below="@id/c_rv_performance"
            android:lineSpacingExtra="5dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:drawablePadding="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/todays_driving"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/ic_dot_black_24dp"
            android:drawablePadding="10dp"
            android:layout_below="@id/no_of_instance"
            android:padding="10dp"
            />


    </RelativeLayout>

</ScrollView>

