<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/road_pulse_action_bar_color">

    <RelativeLayout
        android:id="@+id/noti_image_type"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/towing_alert">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:background="#EF4C37">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/tpicon"/>

            <ImageView
                android:id="@+id/mute"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                android:layout_alignParentRight="true"
                android:layout_marginRight="70dp"
                android:src="@drawable/ic_volume_mute_black_24dp" />

            <ImageView
                android:id="@+id/cancel_alram"
                android:layout_width="35dp"
                android:padding="2dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_cancel_white_24dp"/>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/notification_subtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="200dp"
                android:layout_marginRight="60dp"
                android:padding="12dp"
                android:text=" Vehicle MH12WE1000, back to the normal speed of 30 on 2019-03-25 20:34:47, higest speed reached was 32 kmph"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/vehicleNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:padding="5dp"
                android:text="Vehicle MH12WE1000"
                android:textColor="#000000"
                android:textSize="21sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:text="location"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="55dp"
                android:drawableTop="@drawable/marker_red"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="Near Damodhar Park Opp Ashok Silk Mill LBS Marg Ghatkopar West  Mumbai  Maharashtra 400086  India 20:34:47" />


            <Button
                android:id="@+id/button_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_shape_new"
                android:text="Show My Vehicle"
                android:textSize="16dp"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="40dp"/>

               <Button
                   android:id="@+id/button_deactivated"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@drawable/button_shape_new"
                   android:text="Parking Mode OFF"
                   android:textSize="16dp"
                   android:textAllCaps="false"
                   android:textStyle="bold"
                   android:visibility="gone"
                   android:textColor="@color/white"
                   android:layout_marginTop="30dp"/>


               <Switch
                   android:id="@+id/switch_parking_mode"
                   android:layout_width="288dp"
                   android:layout_height="wrap_content"
                   android:padding="10dp"
                   android:layout_marginTop="20dp"
                   android:textSize="18dp"
                   android:visibility="gone"
                   android:text="Parking Mode Off" />

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>