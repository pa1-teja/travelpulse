<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1.0"
	android:paddingTop="5dp"
	android:paddingBottom="5dp"
    android:gravity="center" 
    android:minHeight="60dp"
    android:background="@drawable/list_selector"
    >

    <ImageView
        android:id="@+id/txtNotificatnIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="centerInside"
        android:src="@drawable/repair"
        android:layout_weight=".1"
        />

    <TextView
        android:id="@+id/txtNotificatnBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/common_style"
        android:width="0dip"
        android:layout_weight=".8"/>
    
     
     <!--   android:textColor="#535353"
 -->
	<LinearLayout
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	    android:layout_weight=".1"
	    android:gravity="center" 
	    android:orientation="vertical"
	    >
	    
	    <LinearLayout
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	    android:gravity="center" 
	     android:layout_weight=".25"
	    android:orientation="horizontal">
	    
	    
	    <TextView
        android:id="@+id/txtNotificatnBell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp" 
        android:text="@string/fa_bell"
        android:textColor="#FF0000"
        android:layout_marginRight="10dp"
        />
	    
   <!-- <TextView
        android:id="@+id/txtNotificatnArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fa_black_arrow_right"
		android:visibility="gone"
         style="@style/common_style"
        />-->
			<TextView
				android:id="@+id/txtNotificatnArrow"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text=""
				style="@style/common_style"
				/>
    
    </LinearLayout>
    
    <TextView
        android:id="@+id/txtNotificatnTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="9sp"
		android:visibility="gone"
        android:textColor="#535353"
        android:layout_marginTop="10dp"   
/>
    </LinearLayout>

</LinearLayout>
