<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/content_background_color"
    android:baselineAligned="true"
    android:minHeight="60dp"
    android:orientation="horizontal"
    android:weightSum="1" >

    <TextView
        android:id="@+id/txtLocation"
        style="@style/page_header_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:text="@string/location"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#535353" />

    <LinearLayout

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.70">
        
        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Name"
            style="@style/common_style"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="left"
            android:singleLine="false"
            android:text="Address "
            android:inputType="textMultiLine"
            style="@style/common_style"
        />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txtEtaText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="ETA: "
                    style="@style/common_style"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtEta"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                     style="@style/common_style"
                    />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txtCostText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cost: "
                   style="@style/common_style"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtRupeeIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Rupee"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/txtCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     style="@style/common_style"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:paddingRight="7dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.30"
        >
		<LinearLayout 
		    android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:id="@+id/linearLayout3">
	        <TextView
	            android:id="@+id/txtCallIcon"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/call"
	            android:textAppearance="?android:attr/textAppearanceSmall"
	            android:textColor="#81c639" />
	
	        <TextView
	            android:id="@+id/txtMob"
	            android:layout_width="139dp"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="0dp"
                android:text="1234567898"
	            style="@style/common_style"/>
		</LinearLayout>

        <Button
            android:id="@+id/btBookNow"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:background="@drawable/mybutton"
            android:paddingLeft="5sp"
            android:paddingRight="5sp"
            android:text="Book Now"
            android:textColor="@color/button_text"
            android:textSize="12sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
             />
    </RelativeLayout>
 <!--   android:layout_alignParentBottom="true"-->
</LinearLayout>
