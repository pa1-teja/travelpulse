<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    android:orientation="horizontal"
    card_view:cardCornerRadius="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/document_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="50dp"
                android:text="Other"
                android:padding="5dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/exp_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/company_name"
                android:text=""
                android:layout_marginLeft="5dp"
                android:padding="2dp"
                android:layout_marginTop="2dp"
                android:textSize="16dp"
                />

            <TextView
                android:id="@+id/policy_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/exp_date"
                android:text=""
                android:padding="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:textSize="16dp"
                />
            <TextView
                android:id="@+id/company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/document_name"
                android:text="Bajaj Alliaze"
                android:padding="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:textSize="16dp"
                />


            <ImageView
                android:id="@+id/upload_success"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_check_circle_black_24dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:visibility="gone"
                 />

            <ImageView
                android:id="@+id/edit_document"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_mode_edit_black_24dp"
                android:layout_marginRight="2dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/document_name"

                />
            <ImageView
                android:id="@+id/iv_upload_document"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_file_upload_black_24dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:visibility="visible"/>




        </RelativeLayout>


    </androidx.cardview.widget.CardView>




