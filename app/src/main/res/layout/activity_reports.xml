<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.trimax.vts.view.reports.ReportsActivity">

    <ImageView
        android:id="@+id/iv_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_arrow_left_black"
        android:padding="10dp"
        android:layout_width="45dp"
        android:layout_height="50dp"/>

    <TextView
        android:id="@+id/tv_date"
        android:padding="5dp"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:drawablePadding="8dp"
        android:drawableEnd="@drawable/ic_calendar"
        app:layout_constraintStart_toEndOf="@+id/iv_back"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="50dp"/>
    <TextView
        android:id="@+id/tv_vehicle"
        android:layout_marginStart="10dp"
        android:padding="5dp"
        android:layout_marginEnd="5dp"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:drawablePadding="8dp"
        android:drawableEnd="@drawable/ic_car"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="50dp"/>

    <TextView
        android:id="@+id/tv_status"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:padding="5dp"
        android:text="Vehicle Status"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_run_status"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:baselineAligned="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_distance"
                android:background="@drawable/bg_blue_gradient"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_marginEnd="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">
                <TextView
                    android:id="@+id/tv_distance"
                    android:drawableTop="@drawable/ic_odometer"
                    android:drawablePadding="10dp"
                    android:layout_marginTop="20dp"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:text="NA"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:gravity="center"
                    android:text="Distance Covered"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_max_speed"
                android:background="@drawable/bg_red_gradient"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">
                <TextView
                    android:id="@+id/tv_speed"
                    android:drawableTop="@drawable/ic_max_speed"
                    android:drawablePadding="10dp"
                    android:layout_marginTop="20dp"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:text="NA"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:gravity="center"
                    android:text="Max Speed"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_status_report"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@+id/cv_run_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:baselineAligned="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_moving"
                android:background="@drawable/bg_green_gradient"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_marginEnd="1dp"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_weight="0.33">
                <ImageView
                    android:padding="5dp"
                    android:layout_marginTop="10dp"
                    android:textSize="24sp"
                    android:text="Stop"
                    android:src="@drawable/ic_car_move"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>
                <TextView
                    android:id="@+id/tv_moving_duration"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textSize="22sp"
                    android:text="NA"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="Moving"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_idle"
                android:background="@drawable/bg_orange_gradient"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_marginEnd="1dp"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_weight="0.33">
                <ImageView
                    android:padding="5dp"
                    android:layout_marginTop="10dp"
                    android:textSize="24sp"
                    android:text="Stop"
                    android:src="@drawable/idle_vehicle"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_width="80dp"
                    android:layout_height="60dp"/>
                <TextView
                    android:id="@+id/tv_idle_duration"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textSize="22sp"
                    android:text="NA"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="Idle"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_stop"
                android:background="@drawable/bg_red_gradient"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.33">
                <ImageView
                    android:padding="5dp"
                    android:layout_marginTop="10dp"
                    android:textSize="24sp"
                    android:text="Stop"
                    android:src="@drawable/ic_car_park"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>
                <TextView
                    android:id="@+id/tv_park_duration"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textSize="22sp"
                    android:text="NA"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="Stopped"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_alerts"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:padding="5dp"
        android:text="Vehicle Alerts"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/cv_status_report"
        app:layout_constraintEnd_toStartOf="@+id/btn_all_alerts"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_all_alerts"
        app:layout_constraintTop_toBottomOf="@+id/cv_status_report"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:text="show All"
        app:backgroundTint="@color/green"
        android:layout_width="wrap_content"
        android:layout_height="40dp"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_alerts">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_performance"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/rl_progress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="10dp"
        android:layout_marginStart="10dp"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_shape_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">
    <ProgressBar
        android:id="@+id/pb_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <TextView
            android:text="Please wait..."
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/pb_progress"
            android:layout_centerVertical="true"
            android:layout_width="150dp"
            android:layout_height="match_parent"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>