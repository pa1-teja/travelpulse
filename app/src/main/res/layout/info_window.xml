<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="@drawable/dashbaordstatuwhite">

    <TextView
        android:id="@+id/txtTitle"
        android:textColor="#000000"
        android:textStyle="bold"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtSnippet"
        android:textColor="#000000"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txtvno"
        android:textColor="#000000"
        android:textStyle="bold"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/txtign_n"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:text="Ignition:"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txtign"
            android:textColor="#ffff"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:text="OFF"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtAc_n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="AC:"
            android:textColor="#000000"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txtAc"
            android:textColor="#ffff"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:gravity="left"
            android:text="OFF"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/dashbaordstatus"
            android:layout_height="wrap_content" />

    </TableRow>

    <TextView
        android:id="@+id/txtspeed"
        android:textColor="#000000"
        android:textStyle="bold"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txtdriver"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:text=""
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txtowner"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:text=""
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txtgroup"
        android:textColor="#000000"
        android:textStyle="bold"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtdate"
        android:textColor="#000000"
        android:textStyle="bold"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Real Time Tracking"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:background="@drawable/buttonback"/>



</LinearLayout>