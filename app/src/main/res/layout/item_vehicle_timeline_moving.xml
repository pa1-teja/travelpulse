<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="3dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/fl_status"
            android:layout_width="30dp"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:id="@+id/view_status"
                android:layout_width="6dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/bg_orange_gradient" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="@drawable/shape_circle_orange"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/rl_details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fl_status"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_below="@+id/tv_title"
                android:layout_toStartOf="@+id/divider"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_to_address"
                android:paddingBottom="8dp"
                android:textSize="12sp" />

            <View
                android:id="@+id/divider"
                android:layout_below="@+id/tv_title"
                android:layout_centerHorizontal="true"
                android:layout_width="15dp"
                android:layout_height="10dp"/>
            <TextView
                android:id="@+id/tv_to_address"
                android:layout_below="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/divider"
                android:textSize="12sp"
                android:paddingBottom="8dp" />
            <View
                android:id="@+id/divider1"
                android:layout_below="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_darken" />

            <TextView
                android:id="@+id/tv_duration"
                android:layout_below="@+id/divider1"
                android:layout_alignParentStart="true"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginBottom="3dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tv_distance"
                android:layout_below="@+id/divider1"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/tv_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:padding="5dp"
                android:textColor="@color/black"/>

            <View
                android:layout_below="@+id/tv_duration"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_darken"
                android:visibility="gone"/>
        </RelativeLayout>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/rl_details" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>