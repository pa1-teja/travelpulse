<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/divider_color"
         >

        <LinearLayout
            style="@style/page_header_background"
            android:layout_height="wrap_content"
            android:minHeight="60dp"
            android:orientation="horizontal"
            android:paddingBottom="5dp" >

            <LinearLayout
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/imgLocation"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="19dp"
                    android:src="@drawable/tyre" />

                <!--
             <ImageView
            android:id="@+id/imgLocation"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/tyre" />
                -->
            </LinearLayout>

            <TextView
                android:id="@+id/txtLocationAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="1dp"
                android:clickable="true"
                android:paddingLeft="5dp"
                style="@style/common_style"
                 />
            
            
            
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:background="@drawable/home_list_gradient" />

        <ListView
            android:id="@+id/ProviderList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@drawable/home_list_gradient"
            android:dividerHeight="10dp" />
        <!-- android:dividerHeight="6dp" -->
        <!--
              <View
             android:layout_width="fill_parent"
             android:layout_height="1dp"
             android:background="#4d4d4d"/>
        -->
    </LinearLayout>
