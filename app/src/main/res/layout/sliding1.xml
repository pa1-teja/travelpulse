<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/action_bar">

    <RelativeLayout
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="#D5D5D5" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:id="@+id/mapgridparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <RelativeLayout
                    android:id="@+id/mapid"
                    android:layout_width="match_parent"
                    android:layout_height="350dp">

                        <fragment
                            android:id="@+id/googleMap"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:name="com.trimax.vts.view.maps.CustomMapFragment" />

                    <RelativeLayout
                        android:id="@+id/relativeLayoutMain"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_alignParentBottom="true"
                        android:background="#80000000"
                        android:clickable="true">

                        <TextView
                            android:id="@+id/getLocaID"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_centerVertical="true"
                            android:textSize="15sp"
                            android:textColor="#fff"/>
                        <LinearLayout
                            android:id="@+id/linearTxtId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal" >

                                <TextView
                                    android:id="@+id/txtVehRegNo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="15dp"
                                    android:textColor="#fff"
                                    android:textSize="14sp" />
                                <TextView
                                    android:id="@+id/txtVehName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:textAllCaps="true"
                                    android:textStyle="bold"
                                    android:maxLines="1"
                                    android:textColor="#fff"
                                    android:textSize="15sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/txtVehSpeed"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="15dp"
                                    android:textColor="#fff"
                                    android:textSize="14sp"/>

                                <TextView
                                    android:id="@+id/txtVehIgnition"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:textColor="#fff"
                                    android:textAllCaps="true"
                                    android:textSize="14sp"/>

                                <TextView
                                    android:id="@+id/txtVehAc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:textColor="#fff"
                                    android:textSize="14sp"/>

                            </LinearLayout>

                            <TextView
                                android:id="@+id/txtVehDateTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:textColor="#fff"
                                android:textSize="14sp" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true">
                            <TextView
                                android:id="@+id/vtsShareIcon"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:textSize="20sp"
                                android:textColor="#fff"
                                android:layout_marginRight="10dp"
                                android:text="@string/fa_share"
                                android:clickable="true"
                                android:onClick="vtsShareClicked"
                                />

                            <!--android:layout_toLeftOf="@+id/maxminMapIcon"-->
                            <ImageView
                                android:id="@+id/maxminMapIcon"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginRight="20dp"
                                android:src="@drawable/maximize"
                                android:clickable="true"
                                android:onClick="maxminMapClicked"
                                android:tag="min"/>
                        </LinearLayout>

                    </RelativeLayout>

                </RelativeLayout>
                <GridView
                    android:id="@+id/homegridview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bghomegridview"
                    android:listSelector="@drawable/grid_select_effect"
                    android:numColumns="3"
                    android:stretchMode="columnWidth" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mapgridparent"
                >
                <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                    android:id="@+id/swipe_refresh_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ListView
                        android:id="@+id/homelistview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mapgridparent"
                        android:divider="@drawable/home_list_gradient"
                        android:dividerHeight="5dp" />

                </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
                <TextView
                    android:id="@+id/refreshtoastID"
                    android:visibility="gone"
                    android:layout_marginTop="60dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:textColor="#000"
                    />

                <TextView
                    android:layout_marginTop="90dp"
                    android:visibility="gone"
                    android:id="@+id/refreshtxtID"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:textSize="17dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"/>

            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lineMapMsgID"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:background="#80000000"
            android:visibility="gone">
            <TextView
                android:id="@+id/mapIdSymbol"
                android:layout_width="55dp"
                android:layout_height="60dp"
                android:text="@string/wifi_symbol"
                android:gravity="center"
                android:textSize="25dp"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/mapMessage"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:textSize="15sp"
                android:textColor="#fff"
                android:visibility="gone"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_below="@+id/lineMapMsgID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/setPanId"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="15dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/car_background_drawable"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/fa_car"
                android:textColor="@color/white_color"
                android:textSize="@dimen/map_text_size" />

            <ImageView
                android:id="@+id/toolId"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:padding="5dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_margin="15dp"
                android:src="@drawable/ic_car_location"
                android:background="@drawable/circular_shape_background"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/fa_map_marker"
                android:textColor="@color/ic_color"
                android:textSize="@dimen/map_text_size" />



            <ImageView
                android:id="@+id/mapchangeID"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:padding="5dp"
                android:layout_marginEnd="15dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/toolId"
                android:background="@drawable/circular_shape_background"
                android:clickable="true"
                android:gravity="center"
                android:src="@drawable/ic_map"
                android:tag="OFF"
                android:text="@string/fa_map"
                android:textColor="@color/ic_color"
                android:textSize="@dimen/map_text_size" />

        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>